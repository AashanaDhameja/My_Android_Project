<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F5A3B7"

    android:layout_height="match_parent"
    tools:context="com.example.hp.bakeology.Details">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView30"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_above="@+id/editText14"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Description :"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="25dp" />


        <TextView
            android:id="@+id/textView302"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="42dp"
            android:text="Flavour :"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView307"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="48dp"
            android:text="Price :"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="25dp"
            android:layout_below="@+id/editText9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="175dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="TextView"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="212dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/editText9"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView302"
            android:background="#FFF4FF"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="85dp" />

        <EditText
            android:id="@+id/editText13"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#FFF4FF"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="154dp"
            android:layout_below="@+id/textView307"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/editText14"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_above="@+id/button22"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="50dp"
            android:background="#FFF4FF"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="220dp" />

        <Button
            android:id="@+id/button22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="42dp"
            android:background="@android:color/holo_blue_dark"
            android:onClick="akhil"
            android:text="Add details" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
